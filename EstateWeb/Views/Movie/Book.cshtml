
@{
    ViewData["Title"] = "Book";
}



    <div class="container">
        <form id="form-input-calendar-movie" method="post">

            <div class="form-group">
                <label>Date</label>
                <input name="Date" type="date">
            </div>
            <div class="form-group">
                <label>Room</label>
                <input name="Room" type="date">
            </div>

            <!--Tỉnh/ thành-->
            <div class="form-group row">
                <label class="col-sm-4 ">Tỉnh/ Thành(<span class="text-red">*</span>)</label>
                <div class="col-sm-8">
                    <select id="slbProvince" onchange="ProvinceChange(event)" name="Province" class="form-control" asp-items="@ViewBag.OptionProvince">
                        <option value="0">---Chọn Tỉnh---</option>
                    </select>
                </div>
            </div>
            <!--Quận/huyện-->
            <div class="form-group row">
                <label class="col-sm-4 " for="exampleFormControlSelect1">Quận/ Huyện(<span class="text-red">*</span>)</label>
                <div class="col-sm-8">
                    <select id="slbDistrict" name="District" onchange="DistrictChange(event); DistrictChange1(event); DistrictChange2(event)" class="form-control">
                        <option value="0">---Chọn Quận Huyện---</option>

                    </select>
                </div>
            </div>

            <!--Đường xã-->
            <div class="row">
                <div class="form-group col-sm-6">
                    <select id="slbStreet" name="Street" class="form-control">
                        <option value="0">---Chọn Đường---</option>
                    </select>
                </div>


                <div class="form-group col-sm-6">
                    <select id="slbWard" name="Ward" class="form-control">
                        <option value="0">---Chọn Xã/Phường---</option>
                    </select>
                </div>

            </div>

            <!--Địa chỉ-->
            <div class="form-group row">
                <label class="col-sm-4 " for="exampleFormControlSelect1">Địa chỉ(<span class="text-red">*</span>)</label>
                <div class="col-sm-8">
                    <input type="text" name="NO" id="NO" class="form-control" placeholder="Nhập địa chỉ" value="">
                </div>

            </div>



        </form>
    </div>
